{
    "version": "0.1.0",
    "isShellCommand": true,
    "tasks": [
        {
            "command": "make",
            "taskName": "Build",
            "isBuildCommand": true,
            "showOutput": "always",
            "args": [
                "all"
            ],
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "message": 3
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}